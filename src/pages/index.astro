---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import NewsletterForm from '../components/NewsletterForm.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const description = 'Personal blog and thoughts on technology, software development, and life.';
---

<BaseLayout title="Bhavik Maneck" description={description}>
  <section class="mb-12">
    <h1 class="mb-4">Hi, I'm Bhavik</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400">
      Welcome to my corner of the internet. I write about technology, software,
      and things I'm learning along the way.
    </p>
  </section>

  <section>
    <h2 class="text-xl font-semibold mb-6">Recent Posts</h2>

    {posts.length === 0 ? (
      <p class="text-gray-600 dark:text-gray-400">No posts yet. Check back soon!</p>
    ) : (
      <div class="space-y-2">
        {posts.map((post) => (
          <BlogPostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
          />
        ))}
      </div>
    )}
  </section>

  <NewsletterForm />
</BaseLayout>
