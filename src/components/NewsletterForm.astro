---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Subscribe to Embedding AI',
  description = 'I push my best posts to my newsletter on applied AI.',
} = Astro.props;
---

<div class="mt-8">
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">{description}</p>

  <iframe
    src="https://embeddingai.substack.com/embed"
    width="100%"
    height="150"
    style="border:none; background:transparent;"
    frameborder="0"
    scrolling="no"
  ></iframe>
</div>
