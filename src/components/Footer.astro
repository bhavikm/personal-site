---
const socialLinks = [
  { href: 'https://github.com/bhavikm', label: 'GitHub' },
  { href: 'https://www.linkedin.com/in/bhavik-maneck/', label: 'LinkedIn' },
];

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-gray-200 dark:border-gray-800 mt-auto">
  <div class="max-w-3xl mx-auto px-4 py-8 pb-20">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-gray-600 dark:text-gray-400 hover:text-accent dark:hover:text-accent-dark"
          >
            {link.label}
          </a>
        ))}
      </div>

      <p class="text-sm text-gray-500 dark:text-gray-500">
        &copy; {currentYear} Bhavik Maneck
      </p>
    </div>
  </div>
</footer>
